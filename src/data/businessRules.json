{
    "approvalRules": [
        {
            "condition": "totalAmount < 10000",
            "action": "autoApprove",
            "setStatus": "Approved"
        },
        {
            "condition": "deliveryDays < 3",
            "action": "setUrgency",
            "urgency": "High"
        },
        {
            "condition": "totalAmount >= 10001",
            "action": "requireApproval",
            "approvalLevel": "Senior Management"
        },
        {
            "condition": "category === 'IT Equipment'",
            "action": "setUrgency",
            "urgency": "Medium"
        },
        {
            "condition": "deliveryDays < 0",
            "action": "setUrgency", 
            "urgency": "High"
        }
    ]
}
